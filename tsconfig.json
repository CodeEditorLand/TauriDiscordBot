{
	"compilerOptions": {
		"target": "ES2021",
		"module": "nodenext",
		"outDir": "./dist",
		"lib": ["ES2021"],

		"strict": true,
		"declaration": false,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["dist"]
}
